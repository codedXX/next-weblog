{
  // ---------------- 全局配置 ----------------
  // 开启保存文件时自动格式化
  "editor.formatOnSave": true,
  // 开启保存时自动修复（例如 ESLint 规则）
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll.stylelint": "explicit"
  },

  // 设置默认的格式化工具为 Prettier
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // ---------------- 针对不同语言的特定配置 ----------------

  // React / JS
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // TypeScript / TSX
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Vue
  "[vue]": {
    // Vue 3 通常建议使用 Prettier，或者 "Vue.volar"
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // 样式文件
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[less]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // 其他
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
